{
    "name": "teamnovu/statamic-unused-images",
    "description": "Addon to list all images with no alt text on your Statamic dashboard.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Teamnovu\\StatamicUnusedAssets\\": "src"
        }
    },
    "authors": [
        {
            "name": "Tom Diggelmann"
        }
    ],
    "support": {
        "email": "developers@novu.ch"
    },
    "extra": {
        "statamic": {
            "name": "Statamic Images Missing Alt",
            "description": "Addon to list all images with no alt text on your Statamic dashboard."
        },
        "laravel": {
            "providers": [
                "Teamnovu\\StatamicUnusedAssets\\ServiceProvider"
            ]
        }
    },
    "require": {
        "statamic/cms": "^3.3|^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
        ]
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
